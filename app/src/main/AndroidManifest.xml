<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="scout.sbrfcurrencychanger">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            android:noHistory="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.PreferencesActivity"
            android:label="@string/lable_settings"
            android:configChanges="orientation|screenSize"
            android:noHistory="false"/>
        <activity
            android:name=".view.CheckedListPreference"
            android:label="@string/title_activity_checked_list_preference"
            android:configChanges="orientation|screenSize"
            android:noHistory="false"/>
        <service
            android:name=".service.ExchangeService"
            android:process=":ExchangeService"
            android:enabled="true"
            android:exported="false"/>
        <receiver
            android:name=".service.ExchangeReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>