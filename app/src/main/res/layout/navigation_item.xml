<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/ns_menu_row"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_height="48dp"
            android:layout_width="match_parent">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/navigation_item_counter_ivIcon"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/navigation_item_counter_tvTitle"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:layout_toRightOf="@+id/navigation_item_counter_ivIcon"
            android:textColor="@android:color/primary_text_light"/>

        <TextView
            android:background="@drawable/rectangle_counter"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:id="@+id/navigation_item_counter_tvCounter"
            android:layout_centerVertical="true"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="0dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>