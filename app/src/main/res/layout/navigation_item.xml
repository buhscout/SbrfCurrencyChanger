<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ns_menu_row"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/navigation_item_counter_ivIcon"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:id="@+id/navigation_item_counter_tvTitle"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:layout_toEndOf="@+id/navigation_item_counter_ivIcon"
        android:textColor="@android:color/primary_text_light"/>
    <TextView
        android:background="@drawable/rectangle_counter"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:id="@+id/navigation_item_counter_tvCounter"
        android:layout_centerVertical="true"
        android:textColor="@android:color/primary_text_light"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="0dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>